#!/usr/bin/env bash
# If pane is not zoomed, zoom pane before running command

if [ "$#" -ge 2 ]; then
   if [ "$1" == "-p" ]; then
       has_pager=true
       shift
   fi
fi

cmd="$@"
if [[ ! "$has_pager" ]]; then
    output="$(cat)"
fi

can_zoom=$([ -n "$TMUX_PANE" ] && tmux list-panes -F '#F' | grep -vq Z && echo true)

[ "$can_zoom" ] && tmux resize-pane -Z

if [[ "$has_pager" ]]; then
    $cmd
else
    echo "$output" | $PAGER
fi

[ "$can_zoom" ] && tmux resize-pane -Z
