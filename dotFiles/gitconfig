[include]
   path = .gitconfig.personal
[alias]
	co = checkout
	ci = commit
	br = branch
	st = status
	ctags = "!git-ctags"
[push]
	default = matching
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[pager]
	diff = diff-so-fancy | less --tabs=3 -RX -+F
	show = diff-so-fancy | less --tabs=3 -RX -+F
[init]
	templatedir = ~/.git_template
[push]
	default = tracking
	followTags = true
[core]
	excludesfile = ~/.gitignore
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color]
	ui = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
